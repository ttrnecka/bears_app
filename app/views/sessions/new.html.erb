<% provide :title, "Log In"%>
<% provide :no_headline, true %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
	<div class="login-panel panel panel-default">
    	<div class="panel-heading">
        	<h3 class="panel-title">Log In</h3>
        </div>
        <%= form_for(:session,role: "form", url:login_path ) do |f| %>
	        <div class="panel-body">
	            <fieldset>
	               	<div class="form-group">
	               		<%= f.text_field :login, class: "form-control", placeholder: "Login", autofocus: "" %>
	                </div>
	                <div class="form-group">
	                  	<%= f.password_field :password, class: "form-control",placeholder: "Password" %>
	                </div>
	                <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
	            </fieldset>
	            <p>New local user? <%= link_to "Sign up now!", signup_path %></p>
	      	</div>
        <% end %>
    </div>
  </div>
</div>
