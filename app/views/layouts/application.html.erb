<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render "layouts/rails_default" %>
  </head>

  <body>
  	<div id="wrapper">
      <%= render "layouts/nav" %>
      <div id="<%= wrapper_id %>">
      	<%= render "layouts/headline" %>
      	<div class="row">
      		<div class="col-md-12">
		      	<% flash.each do |message_type, message| %>
		        	<%= content_tag(:div, message, class: "row alert alert-#{message_type}") %>
		      	<% end %>
	      	</div>
      	</div>
      	<%= yield %>
      </div>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
