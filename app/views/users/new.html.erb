<% provide :title, "Sign Up"%>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<div class="login-panel panel panel-default">
    	<div class="panel-heading">
        	<h3 class="panel-title">Please Sign Up</h3>
        </div>
        <%= form_for(@user,role: "form", url:signup_path ) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="panel-body">
            	<fieldset>
                	<div class="form-group">
                		<%= f.text_field :login, class: "form-control", placeholder: "Login", autofocus: "" %>
                    </div>
                    <div class="form-group">
                		<%= f.email_field :email, class: "form-control", placeholder: "E-mail" %>
                    </div>
                    <div class="form-group">
                		<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                    </div>
                    <div class="form-group">
                    	<%= f.password_field :password, class: "form-control",placeholder: "Password" %>
                    </div>
                    <div class="form-group">
                    	<%= f.password_field :password_confirmation, class: "form-control",placeholder: "Password Confirmation" %>
                    </div>
                    <%= f.submit "Create my account", class: "btn btn-lg btn-success btn-block" %>
                </fieldset>
            </div>
        </div>
        <% end %>
  </div>
</div>
