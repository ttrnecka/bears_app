<% provide(:title, 'All users') %>
<table id="users_table" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline">
	<thead>
    	<tr>
        	<th>Name</th>
            <th>Login</th>
            <th>E-mail</th>
        </tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= link_to user.name, user %></td>
				<td><%= user.login %></td>
				<td><%= link_to user.email, "mailto:#{user.email}" %></td>
			</tr>
		<% end %>
	</tbody>
</table>
