<%= form_for(@user,role: "form", url: yield(:form_url) ) do |f| %>
	<%= render 'shared/error_messages' %>
	<div class="panel-body">
		<fieldset>
	    	<div class="form-group">
	        	<%= f.text_field :login, class: "form-control", placeholder: "Login", autofocus: "" %>
	        </div>
	        <div class="form-group">
	        	<%= f.email_field :email, class: "form-control", placeholder: "E-mail" %>
	        </div>
	        <div class="form-group">
	        	<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
	        </div>
	        <div class="form-group">
	           	<%= f.password_field :password, class: "form-control",placeholder: "Password" %>
	        </div>
	        <div class="form-group">
	           	<%= f.password_field :password_confirmation, class: "form-control",placeholder: "Password Confirmation" %>
	        </div>
	        <%= f.submit yield(:button_text), class: "btn btn-lg btn-success btn-block" %>
		</fieldset>
	</div>
<% end %>